package courses

import (
	types "github.com/svachaj/sambar-wall/db/types"
)

templ CoursesList(courses []types.Course) {
	<section class="mx-auto w-fit flex flex-col gap-8 text-center">
		<h1 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200">Kroužky Lezení</h1>
		for _, course := range courses {
			@CourseTile(course.Name, course.ValidFrom, course.ValidTo)
		}
	</section>
}
