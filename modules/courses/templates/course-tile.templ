package courses

import "time"

templ CourseTile(courseName string, validFrom, validTo time.Time) {
	<div class="flex flex-col">
		<div class="text-xl font-bold text-neutral-800 dark:text-neutral-200">
			{ courseName }
		</div>
		<div class="text-lg text-neutral-800 dark:text-neutral-200">
			{ validFrom.Format("02.01. 2006") } - { validTo.Format("02.01. 2006") }
		</div>
	</div>
}
